<?xml version='1.0' encoding='utf-8'?>
<widget id="cn.joycells" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>别碰白块</name>
    <description>
    </description>
    <author email="leedorian@gmail.com" href="http://joycells.cn">
        Joy Cells
    </author>
    <content src="game.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="*://47.98.97.163:8011/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/android/icon36.png" />
        <icon density="mdpi" src="res/android/icon48.png" />
        <icon density="hdpi" src="res/android/icon72.png" />
        <icon density="xhdpi" src="res/android/icon96.png" />
        <icon density="xxhdpi" src="res/android/icon144.png" />
        <icon density="xxxhdpi" src="res/android/icon192.png" />
        <splash density="port-hdpi" src="res/android/splash/bugani0044.png" />
        <splash density="port-ldpi" src="res/android/splash/bugani0044.png" />
        <splash density="port-mdpi" src="res/android/splash/bugani0044.png" />
        <splash density="port-xhdpi" src="res/android/splash/bugani0044.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Fullscreen" value="true" />
    <preference name="orientation" value="portrait" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <plugin name="cordova-hot-code-push-plugin" spec="^1.5.3" />
    <chcp>
        <config-file url="http://47.98.97.163:8011/game/chcp.json" />
        <native-interface version="1" />
    </chcp>
    <plugin name="cordova-plugin-camera" spec="^4.0.3" />
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <plugin name="cordova-plugin-wechatv2" spec="^2.1.3">
        <variable name="WECHATAPPID" value="wxde833bddadcdeb1d" />
    </plugin>
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <engine name="android" spec="^7.0.0" />
</widget>
